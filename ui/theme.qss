/* Global Font for the Application */
* {
    font-family: "Roboto", "Segoe UI", sans-serif;
    font-size: 14px;
}

/* =================================================================================
   MAIN WINDOW THEME (Dark Blue)
   Scoped to #MainWindow and its children to avoid affecting native-like Popups
   ================================================================================= */

#MainWindow {
    background-color: #0f172a; /* Azul bem escuro (Slate 900) */
    color: #e2e8f0;            /* Slate 200 */
}

#MainWindow QWidget {
    background-color: transparent; /* Inherit by default, specific widgets override */
    color: #e2e8f0;
}

#MainWindow QLabel {
    color: #e2e8f0;
}

/* Specific Containers in Main Window */
#MainWindow QTabWidget::pane {
    border: 1px solid #1e293b;
    background-color: #1e293b; /* Slate 800 */
    border-radius: 6px;
}

#MainWindow QTabBar::tab {
    background-color: #0f172a;
    color: #94a3b8;
    padding: 10px 20px;
    border-top-left-radius: 6px;
    border-top-right-radius: 6px;
    font-weight: bold;
    margin-right: 2px;
}

#MainWindow QTabBar::tab:selected {
    background-color: #1e293b;
    color: #38bdf8; /* Azul claro destaque */
    border-bottom: 2px solid #38bdf8;
}

#MainWindow QTabBar::tab:hover {
    background-color: #1e293b;
    color: #e2e8f0;
}

/* GroupBox */
#MainWindow QGroupBox {
    border: 1px solid #334155;
    border-radius: 8px;
    margin-top: 24px;
    background-color: #1e293b; /* Lighter than bg */
    font-weight: bold;
}

#MainWindow QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 10px;
    color: #38bdf8;
    background-color: transparent;
}

/* Card Frames */
#MainWindow QFrame#Card {
    background-color: #1e293b;
    border-radius: 10px;
    border: 1px solid #334155;
    padding: 10px;
}

/* Inputs */
#MainWindow QLineEdit, #MainWindow QPlainTextEdit, #MainWindow QTextEdit {
    background-color: #334155; /* Slate 700 */
    border: 1px solid #475569;
    border-radius: 6px;
    padding: 8px 12px;
    color: #ffffff;
    selection-background-color: #38bdf8;
}

#MainWindow QLineEdit:focus, #MainWindow QTextEdit:focus {
    border: 1px solid #38bdf8;
    background-color: #475569;
}

/* ComboBox & SpinBox */
#MainWindow QComboBox, #MainWindow QSpinBox, #MainWindow QDoubleSpinBox {
    background-color: #334155;
    border: 1px solid #475569;
    border-radius: 6px;
    padding: 6px 10px;
    color: #ffffff;
    min-height: 24px;
}

#MainWindow QComboBox:focus {
    border: 1px solid #38bdf8;
}

#MainWindow QComboBox::drop-down {
    border: none;
    width: 24px;
}

#MainWindow QComboBox QAbstractItemView {
    background-color: #334155;
    border: 1px solid #475569;
    selection-background-color: #38bdf8;
    color: #ffffff;
}

/* Buttons - Modern & Cohesive */
#MainWindow QPushButton {
    background-color: #2563eb; /* Blue 600 */
    color: #ffffff;
    border: none;
    border-radius: 6px;
    padding: 10px 20px;
    min-height: 24px;
    font-weight: bold;
    font-size: 14px;
    text-transform: uppercase;
}

#MainWindow QPushButton:hover {
    background-color: #3b82f6; /* Blue 500 */
}

#MainWindow QPushButton:pressed {
    background-color: #1d4ed8; /* Blue 700 */
    padding-top: 11px; /* Press effect */
    padding-bottom: 9px;
}

#MainWindow QPushButton:disabled {
    background-color: #475569;
    color: #94a3b8;
}

#MainWindow QPushButton:focus {
    outline: none;
    border: 2px solid #38bdf8;
}

/* Special Button Styles via ObjectName or Property if needed,
   but generic style covers most. Override for Delete buttons */

#MainWindow QPushButton[text="X"] {
    background-color: #ef4444; /* Red 500 */
    padding: 4px 8px;
    min-width: 20px;
}
#MainWindow QPushButton[text="X"]:hover {
    background-color: #f87171;
}

/* Scrollbars */
#MainWindow QScrollBar:vertical {
    border: none;
    background: #0f172a;
    width: 10px;
    margin: 0;
}

#MainWindow QScrollBar::handle:vertical {
    background: #334155;
    min-height: 20px;
    border-radius: 5px;
}
#MainWindow QScrollBar::handle:vertical:hover {
    background: #475569;
}

#MainWindow QScrollBar::add-line:vertical, #MainWindow QScrollBar::sub-line:vertical {
    border: none;
    background: none;
}

#MainWindow QScrollBar::add-page:vertical, #MainWindow QScrollBar::sub-page:vertical {
    background: none;
}

/* CheckBox */
#MainWindow QCheckBox {
    spacing: 8px;
    color: #e2e8f0;
}

#MainWindow QCheckBox::indicator {
    width: 18px;
    height: 18px;
    background-color: #334155;
    border: 1px solid #475569;
    border-radius: 4px;
}


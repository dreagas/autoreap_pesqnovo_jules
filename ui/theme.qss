}

/* Headers */
#MainWindow QLabel#Header {
    font-size: 20px;
    font-weight: bold;
    color: #38bdf8;
}

#MainWindow QLabel#SubHeader {
    font-size: 16px;
    font-weight: bold;
    color: #60a5fa;
}

/* Status Bar */
#MainWindow QStatusBar {
    background-color: #0f172a;
    color: #94a3b8;
    border-top: 1px solid #1e293b;
}
